<div style="background-color:#cee">
<h3>支払項目</h3>
<table border="0">
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Paticipant</th>
    <th></th>
    <th></th>
  </tr>
  <% if payments.size>0 then %>
    <% payments.each do |payment| %>
      <tr>
        <td><%= payment.name %></td>
        <td align="right"><%= number_with_delimiter(payment.price.to_i)%></td>
        <td><%= payment.paticipant_id %> <%= payment.paticipant.name %></td>
        <td><%= link_to '編集', edit_payment_path(payment) %></td>
        <td><%= link_to '削除', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
      <tr>
        <td align="right"><b>計</b></td>
        <td align="right"><%= number_with_delimiter(event.payments_sum.to_i) %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td align="right"><b>一人あたり</b></td>
        <td align="right"><%= number_with_delimiter(event.payments_average.to_i) %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
</table>
<%= link_to '-> 支払項目を追加', new_payment_path(event_id: event.id) %>
<event /><br />
</div>