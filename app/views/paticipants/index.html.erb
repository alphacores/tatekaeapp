<h1>Listing paticipants</h1>



<table>
  <tr>
    <th>Name</th>
    <th>Event</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% @paticipants.each do |paticipant| %>
  <%  paticipant.payments.each do |payment| %>
    <tr>
      <td><%= paticipant.name %></td>
      <td><%= paticipant.event_id %></td>
      <td><%= payment.name %></td>
      <td><%= payment.price %></td>
      <td><%= link_to 'Show', paticipant %></td>
      <td><%= link_to 'Edit', edit_paticipant_path(paticipant) %></td>
      <td><%= link_to 'Destroy', paticipant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
<% end %>
</table>
<br />


<table border="1">
<% @paticipants.each do |paticipant| %>
    <tr>
      <td><%= paticipant.name %></td>
      <td align="right"><%= number_with_delimiter(paticipant.payments_price_sum) %></td>
      <td align="right"><%= number_with_delimiter(paticipant.event_payments_price_sum) %></td>
    </tr>
<% end %>
</table>



